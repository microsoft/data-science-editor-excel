{
    "compilerOptions": {
      "baseUrl": ".",
      "outDir": "lib",
      "module": "commonjs",
      "target": "es5",
      "declaration": true,
      "sourceMap": true,
      "experimentalDecorators": true,
      "noEmitOnError": true,
      "moduleResolution": "node",
      "skipLibCheck": true,
      // "strict": true,
      "paths": {
        "*": [
          "./src/*"
        ]
      },
      "lib": [
          "es2015",
          "dom"
      ]
    },
    "exclude": [
      "node_modules",
      "dist",
      "lib",
      "lib-amd"
    ]
  }